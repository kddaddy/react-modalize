.modalProvider {
  width: 100%;
  height: 100%;
  max-height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 70px;
  z-index: 5;
  
  > div
  > form {
    position: fixed;
    padding: 32px 24px;
    -ms-overflow-style: none;
    overflow: -moz-scrollbars-none;
    overflow-y: auto;
    border-top: 1px solid rgba(0,0,0,0.5);
  }
  
  > div::-webkit-scrollbar
  > form::-webkit-scrollbar {
    width: 0;
  }
}
