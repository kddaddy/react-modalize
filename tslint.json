{
  "defaultSeverity": "error",
  "extends": [
    "tslint-config-airbnb",
    "tslint-react",
    "tslint-no-circular-imports"
  ],
  "rulesDirectory": [
    "node_modules/tslint-import-rules/dist/rules"
  ],
  "rules": {
    "align": [
      true,
      "members",
      "statements",
      "parameters"
    ],
    "ban": false,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "curly": true,
    "semicolon": false,
    "eofline": false,
    "forin": true,
    "indent": [true, "spaces"],
    "interface-name": [true, "never-prefix"],
    "jsdoc-format": true,
    "label-position": true,
    "max-line-length": [true, 120],
    "object-curly-spacing": false,
    "import-name": false,
    "no-any": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-else-after-return": false,
    "no-console": {
      "severity": "error",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    },
    "no-consecutive-blank-lines": [true, 2],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": false,
    "no-unused-expression": true,
    "no-boolean-literal-compare": false,
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [true, "single", "jsx-double"],
    "radix": true,
    "switch-default": true,
    "trailing-comma": true,
    "triple-equals": [true, "allow-null-check"],
    "typedef": [
      true,
      "parameter",
      "property-declaration"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
    "whitespace": [
      false,
      "always",
      "check-module",
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ],
    
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "jsx-boolean-value":false,
    
    "tir-newline-after-import": [true, "always", {"count": 2}],
    "tir-spaces-within-import": [true, "never"],
    "no-circular-imports": [true, {
      "search-depth-limit": 3
    }],
    "ter-arrow-parens": false
  }
}
